# Enable legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Use pnpm as package manager
package-manager=pnpm

# Enable strict SSL for security
strict-ssl=true

# Set registry to npm
registry=https://registry.npmjs.org/

# Enable package-lock.json
package-lock=true

# Set node-linker to hoisted for better compatibility
node-linker=hoisted 
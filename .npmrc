# NPM Configuration for Vercel Build
# This file helps resolve dependency conflicts and ensures consistent builds

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Ensure consistent package manager
package-manager=pnpm@9.11.0

# Disable audit during install for faster builds
audit=false

# Use frozen lockfile for consistent builds
frozen-lockfile=true

# Set registry to npm for better compatibility
registry=https://registry.npmjs.org/

# Enable strict SSL
strict-ssl=true

# Set timeout for network requests
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000 